doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title ChatFiles
        // Bootstrap CSS
        link(rel="shortcut icon", href="/assets/images/logo.png", type="image/x-icon")

        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        // Bootstrap icons
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css")
        // Custom CSS
        link(rel="stylesheet", href="/assets/styles/styles.css")
        // PDF parser API
        //- link(href=`https://cdn.jsdelivr.net/npm/pdfjs-dist@3.5.141/web/pdf_viewer.min.css`, rel="stylesheet")
        script( defer src='https://cdn.jsdelivr.net/npm/pdfjs-dist@3.5.141/build/pdf.min.js')
        // Axios
        script(defer src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.6/axios.min.js", integrity="sha512-06NZg89vaTNvnFgFTqi/dJKFadQ6FIglD6Yg1HHWAUtVFFoXli9BZL4q4EO1UTKpOfCfW5ws2Z6gw49Swsilsg==", crossorigin="anonymous", referrerpolicy="no-referrer")
        // Script tag
        script( defer type='module' src="/js/scriptDemo.js")
        // Bootstrap script tag
        script(defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    body
        // Main container
        dvi.chat-main-container
            // chat left container
            .chat-column-left.mobile-hidden
                .chat-column-left-row-one
                    // PDF uploader
                    .pdf-uploader
                        .drop-zone
                            p#drop-description
                                i.bi.bi-cloud-arrow-up
                                | Drag and drop a file here
                                | or click to upload
                            input#file(type="file", hidden, accept=".pdf,.txt")
                            .d-flex.justify-content-center
                                .spinner-grow.text-primary.loader(role="status")
                        .file-info
                    // pdf chat History button
                    button.btn-sample-pdf.btn.btn-primary(type="button")
                        i.bi.bi-file-earmark-pdf
                        | Sample pdf
                // Navigation Bar
                .chat-column-left-row-two
                    ul.chat-nav-list
                        li.chat-nav-list-item
                            a(href="#") Home
                        li.chat-nav-list-item
                            a(href="#") Pricing
                        li.chat-nav-list-item
                            a(href="#") FAQS
                        li.twitter-icon
                            a(href="#")
                                i.bi.bi-twitter
                    button.btn.btn-danger.hidden.close-btn(type="button")
                        i.bi.bi-x-circle
                        | Return
            // chat right container
            .chat-column-right
                .chat-column-right-row-one
                    span.button-dropsection.hidden
                        i.bi.bi-list
                    .chat-title Title
                    span.button-tools.hidden
                        i.bi.bi-three-dots-vertical
                    // tools containor
                    .chat-tools.mobile-hidden
                        .chat-tools-item
                            span
                                i.bi.bi-download
                            span.chat-tools-name Download
                        .chat-tools-item
                            span
                                i.bi.bi-arrow-counterclockwise
                            span.chat-tools-name Reset
                        .chat-tools-item
                            span
                                i.bi.bi-archive
                            span.chat-tools-name Delete
                // Chat area
                .chat.chat-column-right-row-two
                    // chat messages containor
                    .messages-chat
                        // filled by js
                        // user  input with button
                .chat-column-right-row-three
                    .input-group.default-input-group
                        input#user-input.form-control.generate-input(type="text", placeholder="Chat with PDF")
                        button#submit-button.btn-ask.btn.btn-default.btn-primary(type="button")
                            i.bi.bi-send
